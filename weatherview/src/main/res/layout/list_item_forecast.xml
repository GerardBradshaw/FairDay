<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:minWidth="48dp"
    android:orientation="vertical"
    android:padding="8dp"
    tools:background="@android:color/holo_purple">

    <TextView
        android:id="@+id/forecast_day_name"
        style="@style/BasicWhiteTextWithShadowStyle"
        tools:text="Fri"/>

    <ImageView
        android:id="@+id/forecast_condition_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        tools:src="@drawable/ic_pin_on"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/forecast_min_temperature"
            style="@style/BasicWhiteTextWithShadowStyle"
            tools:text="15"/>

        <TextView
            style="@style/BasicWhiteTextWithShadowStyle"
            android:paddingHorizontal="4sp"
            android:text="@string/weather_view_symbol_hyphen"/>

        <TextView
            android:id="@+id/forecast_max_temperature"
            style="@style/BasicWhiteTextWithShadowStyle"
            tools:text="32"/>

        <TextView
            style="@style/BasicWhiteTextWithShadowStyle"
            android:text="@string/weather_view_symbol_degree"/>

    </LinearLayout>


</LinearLayout>