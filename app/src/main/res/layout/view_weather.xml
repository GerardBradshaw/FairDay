<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/condition_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/clouds"
        tools:src="@android:color/holo_red_dark"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#30FFFFFF"/>

    <!-- DATA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="72dp"/>

        <!-- LOCATION -->
        <TextView
            android:id="@+id/location_text_view"
            style="@style/LocationStyle"
            tools:text="San Francisco"
            android:text="@string/invalid_location" />

        <!-- CONDITIONS -->
        <com.gerardbradshaw.whetherweather.views.ConditionsView
            android:id="@+id/conditions_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- TEMPERATURE -->
        <com.gerardbradshaw.whetherweather.views.TemperatureView
            android:id="@+id/temperature_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- FORECAST -->
        <com.gerardbradshaw.whetherweather.views.ForecastView
            android:id="@+id/forecast_view"
            tools:layout_height="72dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- OPEN WEATHER CREDIT -->
    <com.gerardbradshaw.whetherweather.views.OpenWeatherCreditView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>