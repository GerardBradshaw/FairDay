<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#000000"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:adjustViewBounds="true"
        android:paddingHorizontal="12dp"
        android:src="@drawable/open_weather_logo"
        android:contentDescription="@string/open_weather_logo" />

    <TextView
        style="@style/BasicWhiteTextWithShadowStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_credit"
        android:textSize="@dimen/text_size_weather_credit"
        android:textStyle="italic"/>

</LinearLayout>