<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#000000"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/cd_open_weather_logo"
        android:paddingHorizontal="12dp"
        android:src="@drawable/open_weather_logo" />

    <TextView
        style="@style/BasicWhiteTextWithShadowStyle"
        android:textColor="@android:color/darker_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:paddingVertical="4dp"
        android:text="@string/string_data_provided_by_openweathermap_dot_org"
        android:textSize="@dimen/text_size_weather_credit"
        android:textStyle="italic"
        app:drawableRightCompat="@drawable/ic_open_externally"
        app:drawableTint="@android:color/darker_gray" />

</LinearLayout>