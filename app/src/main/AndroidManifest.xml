<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gerardbradshaw.fairday">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.ActionBar.Transparent"
        tools:targetApi="n">

        <activity android:name=".activities.detail.DetailActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.saved.SavedActivity"
            android:label="@string/title_activity_locations"
            android:theme="@style/AppTheme.ActionBar.Transparent.NoActionBar" />

        <service
            android:name=".activities.detail.FetchAddressIntentService"
            android:exported="false" />


        <!-- WIDGET -->

        <receiver
            android:name=".widget.FairDayWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/fair_day_widget_info" />
        </receiver>

        <service
            android:name=".widget.FairDayWidgetProvider$FairDayWidgetUpdateService"
            android:exported="false" />

        <activity
            android:name=".widget.FairDayWidgetConfigureActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
    </application>

</manifest>